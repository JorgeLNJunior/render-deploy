{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "lib": [
      "ES2022"
    ],
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "removeComments": true,
    "outDir": "./lib"
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
