{
  "name": "@jorgelnjunior/render-deploy",
  "description": "A simple action to deploy applications to render.com",
  "version": "1.4.6",
  "author": "JorgeLNJunior",
  "private": true,
  "license": "MIT",
  "type": "module",
  "main": "lib/main.js",
  "scripts": {
    "prepare": "husky",
    "prebuild": "rimraf lib",
    "build": "tsc -p tsconfig.build.json",
    "lint": "eslint .",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "vitest run",
    "test:cov": "vitest run --coverage",
    "test:watch": "vitest --ui",
    "all": "npm run build && npm run lint && npm run package && npm test",
    "release": "release-it --ci"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JorgeLNJunior/render-deploy.git"
  },
  "keywords": [
    "actions",
    "render",
    "deploy"
  ],
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "axios": "^1.13.2",
    "octokit": "^4.1.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@release-it/conventional-changelog": "^10.0.4",
    "@types/node": "^22.18.10",
    "@types/node-fetch": "^2.6.13",
    "@vercel/ncc": "^0.38.4",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "eslint": "^9.39.2",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.1.7",
    "js-yaml": "^4.1.1",
    "lint-staged": "^16.2.7",
    "release-it": "^19.2.0",
    "rimraf": "^6.1.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.1",
    "vitest": "^4.0.16"
  },
  "overrides": {
    "conventional-changelog-conventionalcommits": "8.0.0"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --cache --fix"
    ]
  }
}
