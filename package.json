{
  "name": "@jorgelnjunior/render-deploy",
  "description": "A simple action to deploy applications to render.com",
  "version": "1.4.4",
  "author": "JorgeLNJunior",
  "private": true,
  "license": "MIT",
  "type": "module",
  "main": "lib/main.js",
  "scripts": {
    "prepare": "husky",
    "prebuild": "rimraf lib",
    "build": "tsc -p tsconfig.build.json",
    "lint": "eslint .",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "NODE_OPTIONS=--experimental-vm-modules NODE_NO_WARNINGS=1 npx jest",
    "test:cov": "jest --coverage",
    "all": "npm run build && npm run lint && npm run package && npm test",
    "release": "release-it --ci"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JorgeLNJunior/render-deploy.git"
  },
  "keywords": [
    "actions",
    "render",
    "deploy"
  ],
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "axios": "^1.7.9",
    "octokit": "^4.1.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@release-it/conventional-changelog": "^10.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.4",
    "@types/node-fetch": "^2.6.12",
    "@vercel/ncc": "^0.38.3",
    "eslint": "^9.20.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "lint-staged": "^15.4.3",
    "release-it": "^18.1.2",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5",
    "ts-jest-resolver": "^2.0.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.0"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --cache --fix"
    ]
  }
}
